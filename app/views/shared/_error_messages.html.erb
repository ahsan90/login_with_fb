<% if @profile.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-danger">
        <h2>Please fix the following <%= pluralize(@profile.errors.count, "error") %> :</h2>

        <ul>
          <% @profile.errors.full_messages.each do |msg| %>
              <li style=""><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
<% end %>