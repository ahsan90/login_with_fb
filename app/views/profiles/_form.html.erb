<div class="form-horizontal" role="form">

  <%= form_for (@profile) do |f| %>

      <%= render 'shared/error_messages' %>

      <div class="form-group">
        <%= f.label :first_name, "First Name", :class => "col-sm-2 control-label" %>
        <div class="col-sm-6">
          <%= f.text_field :first_name, :class => "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :last_name, "Lirst Name", :class => "col-sm-2 control-label" %>
        <div class="col-sm-6">
          <%= f.text_field :last_name, :class => "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :email, "Email", :class => "col-sm-2 control-label" %>
        <div class="col-sm-6">
          <%= f.text_field :email, :class => "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :bio, "Bio", :class => "col-sm-2 control-label" %>
        <div class="col-sm-6">
          <%= f.text_area :bio, :class => "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit :class => "btn btn-primary" %>
        </div>
      </div>
  <% end %>
</div>